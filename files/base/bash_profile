#!/bin/bash

for f in `ls /etc/container_environment`
do
  export $f=`cat /etc/container_environment/$f`
done

export PATH=$PATH:/usr/games/
export PATH=$PATH:~/.composer/vendor/bin

USER=`id -nu`
RUBY_VERSION=`ruby --version | ruby -ne 'print /\b\d\.\d+/.match($_)'`
export GEM_HOME=home/$USER/.gem/ruby/$RUBY_VERSION.0
export PATH=$PATH:$GEM_HOME/bin


# If not running interactively, don't do anything
[[ $- != *i*  ]] && return

echo " @@@  @@@  @@@@@@@@              @@@@@@   @@@@@@@    @@@@@@@"
echo " @@@  @@@  @@@@@@@@             @@@@@@@@  @@@@@@@@  @@@@@@@@"
echo " @@!  @@@  @@!                  @@!  @@@  @@!  @@@  !@@"
echo " !@!  @!@  !@!                  !@!  @!@  !@!  @!@  !@!"
echo " @!@!@!@!  @!!!:!    @!@!@!@!@  @!@!@!@!  @!@!!@!   !@!"
echo " !!!@!!!!  !!!!!:    !!!@!@!!!  !!!@!!!!  !!@!@!    !!!"
echo " !!:  !!!  !!:                  !!:  !!!  !!: :!!   :!!"
echo " :!:  !:!  :!:                  :!:  !:!  :!:  !:!  :!:"
echo " ::   :::   :: ::::             ::   :::  ::   :::   ::: :::"
echo "  :   : :  : :: ::               :   : :   :   : :   :: :: :"
echo ""
echo ""
echo "   Please checkout the README.md file for all the details!"
echo ""
echo "                                                   Have fun!"

# Dull configuration
alias ls='ls --color=auto'
alias grep='grep --color=auto'
export EDITOR=nano
