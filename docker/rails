FROM hearcch/webapp-server:latest

ARG RUBY_VERSION

ARG DEBIAN_FRONTEND=noninteractive

RUN apt-add-repository ppa:brightbox/ruby-ng \
 && apt-get update -q -y \
 && apt-get install -q -y \
        autoconf \
        imagemagick \
        libgdbm-dev \
        libncurses5-dev \
        libmagickwand-dev \
        libreadline6-dev \
        libtool-bin \
        libyaml-dev \
        libxml2-dev \
        libxslt1-dev \
        ruby${RUBY_VERSION} \
        ruby${RUBY_VERSION}-dev \
        ruby-switch \
 && apt-get clean \
 && ruby-switch --set ruby${RUBY_VERSION} \
 && rm -rf /var/lib/apt/lists/* /var/tmp/*

RUN echo "gem: --no-document" > /etc/gemrc

## Runit
COPY runit/puma.sh /etc/service/puma/run
RUN chmod +x /etc/service/puma/run

# Templates
COPY files/rails /var/templates/rails
# Develop
#COPY files/base /var/templates/base
#COPY scripts/boot.sh /usr/local/bin/boot.sh
#RUN chmod +x /usr/local/bin/boot.sh

# Config
ENV CONFIG rails

ARG BUILD_DATE
ARG VCS_REF

LABEL org.label-schema.build-date=${BUILD_DATE} \
      org.label-schema.vcs-ref=${VCS_REF}

